.container {
    width: 80%;
    margin: 0px auto 0px auto;
}
#regist-form .form-group {
    margin: 5px 5px 5px 5px;
}
#regist-form .control-label {
    display: inline-block;
    margin-right: 10px;
    min-width: 120px;
    text-align: right;
}
#regist-form .form-control {
    display: inline-block;
    padding: 5px 5px 3px 5px;
    margin-bottom: 10px;
    font-size: 14px;
    color: #111;
    vertical-align: middle;
    margin-top: 5px;
    background-color: #FFF;
    border-radius: 0px;
    border-width: 1px;
    border-style: solid;
    border-color: #C0C0C0 #D9D9D9 #D9D9D9 #D0D0D0;
    border-image: none;
    -moz-border-top-colors: none;
    -moz-border-right-colors: none;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    transition: border 0.2s linear 0s;
    width: 400px;
}
#regist-form .radio {display:inline-block; margin: 30px 20px 10px 30px;}
#regist-form .radio #storage_type-0 {margin-left: 110px}
#regist-form #submit {margin-left:140px; margin-top:20px;}
#regist-form h1 {margin: 20px 0 20px 20px}
#regist-form {margin-bottom: 40px;}

/* layout */
@media print, screen and (min-width: 400px) and (max-width: 800px) {
    .container {width: 100%; margin-left: 10%;}
    #regist-form .control-label {display:block; text-align:left;}
    #regist-form .radio {display:inline-block; margin: 30px 20px 10px 0;}
    #regist-form .radio #storage_type-0 {margin-left: 20px;}
    #regist-form #submit {margin-left:20px; margin-top:20px;}
    #regist-form h1 {margin: 20px 0 20px 0;}
}

@media print, screen and (max-width: 400px) {
    .container {width: 100%;}
    #regist-form .control-label {display:block; text-align:left;}
    #regist-form .form-control {width: 98%;}
    #regist-form .radio {display:inline-block; margin: 30px 20px 10px 0;}
    #regist-form .radio #storage_type-0 {margin-left: 20px;}
    #regist-form #submit {margin-left:20px; margin-top:20px;}
    #regist-form h1 {margin: 20px 0 20px 0;}
}