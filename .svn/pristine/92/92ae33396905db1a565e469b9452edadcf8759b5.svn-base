.form-group {
    margin: 10px 0px;
    padding: 5px 0px;
    font-size: 12.5px;
}
input[type="text"] {
    display: inline-block;
    padding: 5px 5px 3px 5px;
    margin-bottom: 10px;
    font-size: 14px;
    color: #111;
    vertical-align: middle;
    margin-top: 5px;
    background-color: #FFF;
    border-radius: 0px;
    border-width: 1px;
    border-style: solid;
    border-color: #C0C0C0 #D9D9D9 #D9D9D9 #D0D0D0;
    border-image: none;
    -moz-border-top-colors: none;
    -moz-border-right-colors: none;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    transition: border 0.2s linear 0s;
    width: 97%;
}
#body{padding:0; border:0; width: 98%; min-height: 420px;}
#access_level li {margin: 5px 0 5px 0;}

.s-button {
    width: 200px;
    height: 32px;
    margin-right: 10px;
    font-size: 14px;
    background: none repeat scroll 0% 0% #428BD1;
    color: #FFF;
    border: medium none;
    cursor: pointer;
}
.a-button {
    position: absolute;
    display: inline-block;
    margin-top: 5px;
    width: 80px;
}
.write-tag {}
.write-tag .text-core {
    width: 204px;
    height: 32px;
    margin-top: 5px;
    display: inline-block;
    background-color: #FFF;
    border-width: 1px;
    border-style: solid;
    border-right: 1px solid #D9D9D9;
    border-color: #C0C0C0 #D9D9D9 #D9D9D9 #D0D0D0;
    -moz-border-top-colors: none;
    -moz-border-right-colors: none;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    border-image: none;
    transition: border 0.2s linear 0s;
}
.write-tag #tagname {
    height: 30px;
    border: 0;
    display: inline-block;
}
.by-password-div {
    display: block;
    margin: -50px 0 0 110px;
    padding: 0;
}
.by-password-div #access_pw {
    width: 200px;
    max-width: 100%;
}
#save_draft_state {
    color: #CC0001;
}

#access_level li { list-style: none; }